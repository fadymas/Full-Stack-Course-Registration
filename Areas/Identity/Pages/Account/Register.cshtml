    @page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}




<div class=" container hi row justify-content-center">

    <div class="smain  form rounded-4 p-1 pt-2 col-12 col-md-8 col-lg-6 col-xl-4 visible">

        <img src="/lib/imgs/Logo-Final-01-e1678796364810.svg" alt="mcv logo" width="100px">

        <form class="d-flex flex-column  align-items-center was-validated" id="signupform"
            asp-route-returnUrl="@Model.ReturnUrl" name="signUp" method="post">

            <h3 class="text-center  mt-3 heading   fw-bold loginText">Sign Up</h3>

            <div class="input-group input-group-lg w-75 mt-4">
                <span class="input-group-text" id="inputGroup-sizing-lg">
                    <svg class="svg-inline--fa fa-user fa-sm fa-fw" aria-hidden="true" focusable="false"
                        data-prefix="fas" data-icon="user" role="img" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 448 512" data-fa-i2svg="">
                        <path fill="currentColor"
                            d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z">
                        </path>
                    </svg><!-- <i class="fas fa-user fa-sm fa-fw"></i> Font Awesome fontawesome.com -->
                </span>
                <div class="form-floating">
                    <input asp-for="Input.Name" class="form-control name" autocomplete="username" aria-required="true"
                        placeholder="UserName" id="Name" autofocus="" dir="ltr">

                    <label asp-for="Input.Name">Username</label>
                </div>

            </div>
            <span asp-validation-for="Input.Name" class="text-danger" id="nameerror"></span>

            <div class="input-group input-group-lg w-75 mt-4">
                <span class="input-group-text" id="inputGroup-sizing-lg"><i class="fa-solid fa-envelope"></i></span>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control email" autocomplete="email" aria-required="true"
                        placeholder="name@example.com" id="email" />
                    <label asp-for="Input.Email">Email</label>

                </div>

            </div>
            <span asp-validation-for="Input.Email" class="text-danger " id="emailerror"></span>
            <div class="input-group input-group-lg w-75 mt-4">
                <span class="input-group-text" id="inputGroup-sizing-lg"><i class="fa-solid fa-lock"></i></span>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control password" id="password"
                        autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>

                </div>
                <!-- confirm password -->
            </div>

            <span asp-validation-for="Input.Password" class="text-danger" id="passworderror"></span>
            <div class="input-group input-group-lg w-75 mt-4">
                <span class="input-group-text" id="inputGroup-sizing-lg"><i class="fa-solid fa-lock"></i></span>

                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control confpass" autocomplete="new-password"
                        aria-required="true" placeholder="password" id="confpass" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>

                </div>

            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <div class="input-group input-group-lg w-75 mt-4">


                <div class="form-floating me-3">
                    <select asp-for="Input.Department" class="form-select" autocomplete="Add-Department" aria-required="true" id="dropdown" >

                        <option  value="0" disabled="">......</option>
                        @{
                            if (Model.Departments != null && Model.Departments.Any())
                            {
                                foreach (var department in Model.Departments)
                                {
                                    <option value="@department.Id">@department.Name</option>
                                }

                            }
                            else
                            {
                                <option value="0" disabled>No departments available</option>
                            }


                        }

                    </select>
                    <label asp-for="Input.Department">Department</label>

                </div>


                <div class="form-floating">
                    <input asp-for="Input.Date_Of_Birth" aria-required="true"  id="date" class="form-control" >

                    <label asp-for="Input.Date_Of_Birth">Birth Day</label>


                </div>

            </div>
            <button class="btn btn-info mt-3 bu p-3 ps-5  pe-5" id="confirm" type="submit">Confirm</button>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2" id="diverror" role="alert"></div>
            <span class="loginspace">
                Already have Account <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                    class="link-light login    link-opacity-50  link-offset-2 link-underline-opacity-0">
                    Log
                    In
                </a>
            </span>

        </form>



    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}